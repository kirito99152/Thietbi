@model Thietbi.Models.TbQuanHeThietBi

@{
    ViewData["Title"] = "Tạo Quan Hệ Thiết Bị";
}

<h1 class="text-center my-4">Phòng Hậu Cần HVANND</h1>

<hr />
<div class="container mt-5">
    <!-- Thêm hình ảnh Học viện An Ninh vào góc trên bên trái -->
    <div style="position: relative;">
        <img src="/images/Logo_hoc_vien_ANND.png" alt="Logo Học Viện An Ninh" class="logo-img"
             style="position: absolute; top: -180px; left: 10px;" />
    </div>
    <h2 class="text-center mb-4">Tạo Quan Hệ Thiết Bị</h2>
    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdThietBiCha" class="form-label"><i class="fas fa-sitemap"></i> Thiết Bị Cha</label>
                            <select asp-for="IdThietBiCha" class="form-select shadow-sm form-select-lg" asp-items="ViewBag.IdThietBiCha"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdThietBiCon" class="form-label"><i class="fas fa-sitemap"></i> Thiết Bị Con</label>
                            <select asp-for="IdThietBiCon" class="form-select shadow-sm form-select-lg" asp-items="ViewBag.IdThietBiCon"></select>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Tạo Quan Hệ" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

<style>
    /* Hiệu ứng hover cho nút */
    .btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các trường nhập liệu */
    .form-control:hover, .form-select:hover {
        border-color: #0056b3;
        background-color: #f0f8ff;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các biểu tượng */
    i:hover {
        color: #0056b3;
        transform: scale(1.2);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho link */
    a:hover {
        color: #0056b3;
        text-decoration: underline;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .card:hover {
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ khi hover */
        transform: translateY(-5px); /* Di chuyển card lên khi hover */
        transition: all 0.3s ease-in-out;
    }

    /* Thêm logo vào góc trên bên trái */
    .logo-container {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 999;
    }

    .logo-img {
        width: 100px; /* Điều chỉnh kích thước của logo */
        height: auto; /* Đảm bảo tỷ lệ giữ nguyên khi thay đổi kích thước */
    }

        /* Hiệu ứng hover cho logo */
        .logo-img:hover {
            transform: scale(1.1); /* Phóng to logo khi hover */
            transition: all 0.3s ease;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}