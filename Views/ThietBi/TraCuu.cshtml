<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4 fw-bold">Tìm Kiếm Thiết Bị</h3>

        <!-- Form Tìm Theo Người Sở Hữu -->
        <form asp-action="ByOwner" method="get" class="row g-3 align-items-center">
            <div class="col-md-8">
                <label for="idNguoiSoHuu" class="form-label fw-bold">Nhập ID Người Sở Hữu:</label>
                <input type="number" id="idNguoiSoHuu" name="idNguoiSoHuu" class="form-control" placeholder="Nhập ID..." required />
           </div>
           <div></div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Xem Thiết Bị
                </button>
            </div>
        </form>

        <!-- Form Tìm Theo Đơn Vị Sở Hữu -->
        <form asp-action="ByGroup" method="get" class="row g-3 align-items-center mt-4">
            <div class="col-md-8">
                <label for="idDonViSoHuu" class="form-label fw-bold">Nhập ID Đơn Vị Sở Hữu:</label>
                <input type="number" id="idDonViSoHuu" name="idDonViSoHuu" class="form-control" placeholder="Nhập ID..." required />
            </div>
            <div></div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Xem Thiết Bị
                </button>
            </div>
        </form>

        <form asp-action="LSSC" asp-controller="LichSuSuaChua" method="get" class="row g-3 align-items-center mt-4">
            <div class="form-group">
                <label for="IdThietBi">Nhập ID Thiết Bị:</label>
                <input type="number" class="form-control" id="IdThietBi" name="idThietBi" placeholder="Nhập ID..." required>
            </div>
            <button type="submit" class="btn btn-primary">Tra Cứu Lịch Sử Sửa Chữa</button>
        </form>
        <form asp-action="LSCP" asp-controller="LichSuCapPhat" method="get" class="row g-3 align-items-center mt-4">
            <div class="form-group">
                <label for="IdThietBi">Nhập ID Thiết Bị:</label>
                <input type="number" class="form-control" id="IdThietBi" name="idThietBi" placeholder="Nhập ID..." required>
            </div>
            <button type="submit" class="btn btn-primary">Tra Cứu Lịch Sử Cấp Phát</button>
        </form>
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
        </div>
    </div>
</div>
