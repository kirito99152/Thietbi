@model IEnumerable<Thietbi.Models.TbThietBi>

@{
    ViewData["Title"] = $"Thiết bị của Người Sở Hữu ID {ViewData["IdNguoiSoHuu"]}";
}

<div class="container mt-5">
    <!-- Tiêu đề -->
    <h1 class="text-center mb-4 fw-bold">@ViewData["Title"]</h1>

    <!-- Bảng Thiết Bị -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Danh Sách Thiết Bị</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">ID Thiết Bị</th>
                        <th class="text-center">Tên Thiết Bị</th>
                        <th class="text-center">Mô Tả</th>
                        <th class="text-center">Mã HV</th>
                        <th class="text-center">Mã Nhà SX</th>
                        <th class="text-center">Loại Thiết Bị</th>
                        <th class="text-center">Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.IdThietBi</td>
                            <td>@item.TenThietBi</td>
                            <td>@item.MoTa</td>
                            <td>@item.MaThietBiHv</td>
                            <td>@item.MaThietBiNhaSx</td>
                            <td>@item.IdLoaiThietBiNavigation?.LoaiThietBi</td>
                            <td>@item.IdTrangThaiThietBiNavigation?.TrangThaiThietBi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Nút Quay lại -->
        <div class="text-center mb-4">
            <a href="/ThietBi/TraCuu" class="btn btn-outline-primary fw-bold px-4 py-2 shadow">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<style>
    .table th,
    .table td {
        vertical-align: middle; /* Giúp nội dung căn giữa theo chiều dọc */
    }

    .card {
        border-radius: 10px; /* Bo tròn các góc của card */
    }

    .btn-secondary {
        font-size: 16px;
    }
</style>
