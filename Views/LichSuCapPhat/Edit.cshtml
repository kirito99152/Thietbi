@model Thietbi.Models.TbLichSuCapPhat

@{
    ViewData["Title"] = "Sửa Thông Tin";
}

<h2 class="text-center mb-4 fw-bold">Sửa Thông Tin</h2>

<div class="container">
    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <input type="hidden" asp-for="IdLichSuCapPhat" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdThietBi" class="form-label"><i class="fas fa-tools"></i> Thiết Bị</label>
                        <select asp-for="IdThietBi" class="form-select shadow-sm form-select-lg" asp-items="ViewBag.IdThietBi"></select>
                        <span asp-validation-for="IdThietBi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdNguoiDuocGiao" class="form-label"><i class="fas fa-user"></i> Người Được Giao</label>
                        <input asp-for="IdNguoiDuocGiao" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdNguoiDuocGiao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdDonViDuocGiao" class="form-label"><i class="fas fa-building"></i> Đơn Vị Được Giao</label>
                        <input asp-for="IdDonViDuocGiao" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdDonViDuocGiao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdNguoiCapPhat" class="form-label"><i class="fas fa-user-shield"></i> Người Cấp Phát</label>
                        <input asp-for="IdNguoiCapPhat" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdNguoiCapPhat" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ThoiGianCapPhat" class="form-label"><i class="fas fa-calendar-plus"></i> Thời Gian Cấp Phát</label>
                        <input asp-for="ThoiGianCapPhat" type="datetime-local" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="ThoiGianCapPhat" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ThoiGianThuHoi" class="form-label"><i class="fas fa-calendar-minus"></i> Thời Gian Thu Hồi</label>
                        <input asp-for="ThoiGianThuHoi" type="datetime-local" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="ThoiGianThuHoi" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="GhiChu" class="form-label"><i class="fas fa-sticky-note"></i> Ghi Chú</label>
                        <textarea asp-for="GhiChu" class="form-control shadow-sm form-control-lg" rows="3"></textarea>
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-2">Lưu Thông Tin</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Hiệu ứng hover cho nút */
    .btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các trường nhập liệu */
    .form-control:hover, .form-select:hover {
        border-color: #0056b3;
        background-color: #f0f8ff;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các biểu tượng */
    i:hover {
        color: #0056b3;
        transform: scale(1.2);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho link */
    a:hover {
        color: #0056b3;
        text-decoration: underline;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .card:hover {
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
    }

    /* Tăng kích thước font chữ và thêm padding */
    .form-label {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .form-control {
        font-size: 1rem;
        padding: 0.75rem;
    }

    .form-select {
        font-size: 1rem;
        padding: 0.75rem;
    }

    .form-group.text-center {
        margin-top: 30px; /* Điều chỉnh giá trị này theo nhu cầu */
    }

    /* Thêm logo vào góc trên bên trái */
    .logo-container {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 999;
    }

    .logo-img {
        width: 100px;
        height: auto;
    }

        .logo-img:hover {
            transform: scale(1.1);
            transition: all 0.3s ease;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
