@model Thietbi.Models.TbLichSuSuaChua

@{
    ViewData["Title"] = "Chi Tiết Lịch Sử Sửa Chữa";
}

<div class="container mt-5">
    <!-- Thêm hình ảnh Học viện An Ninh vào góc trên bên trái -->
    <div style="position: relative;">
        <img src="/images/Logo_hoc_vien_ANND.png" alt="Logo Học Viện An Ninh" class="logo-img"
             style="position: absolute; top: -70px; left: 10px;" />
    </div>
    <h1 class="text-center my-4">Thông Tin Lịch Sử Sửa Chữa</h1>

    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-body">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs" id="tabContent">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#general">Thông Tin Chung</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#details">Chi Tiết Lịch Sử Sửa Chữa</a>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content mt-4">
                <!-- Thông Tin Chung Tab -->
                <div class="tab-pane fade show active" id="general">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                                    Thông Tin Sở Hữu
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show">
                                <div class="accordion-body">
                                    <p><strong>Người Báo:</strong> @Html.DisplayFor(model => model.IdNguoiBao)</p>
                                    <p><strong>Đơn Vị Báo:</strong> @Html.DisplayFor(model => model.IdDonViBao)</p>
                                    <p><strong>Người Sửa:</strong> @Html.DisplayFor(model => model.IdCanBoSua)</p>
                                    <p><strong>Đơn Vị Sửa:</strong> @Html.DisplayFor(model => model.IdDonViSua)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chi Tiết Lịch Sử Sửa Chữa Tab -->
                <div class="tab-pane fade" id="details">
                    <div class="accordion" id="accordionExample2">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                                    Chi Tiết Sửa Chữa
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <p><strong>Thời Gian Bắt Đầu:</strong> @Html.DisplayFor(model => model.ThoiGianBatDau)</p>
                                    <p><strong>Thời Gian Kết Thúc:</strong> @Html.DisplayFor(model => model.ThoiGianKetThuc)</p>
                                    <p><strong>Hiện Tượng:</strong> @Html.DisplayFor(model => model.HienTuong)</p>
                                    <p><strong>Nguyên Nhân Xác Định:</strong> @Html.DisplayFor(model => model.NguyenNhanXacDinh)</p>
                                    <p><strong>Kết Quả Sửa:</strong> @Html.DisplayFor(model => model.KetQuaSua)</p>
                                    <p><strong>Thông Tin Sửa Chữa:</strong> @Html.DisplayFor(model => model.ThongTinSuaChua)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Các nút hành động -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdLichSuSuaChua" class="btn btn-primary btn-lg me-2">
            <i class="fas fa-edit"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
        </a>
    </div>
</div>

<style>
    /* Thêm logo vào góc trên bên trái */
    .logo-container {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 999;
    }

    .logo-img {
        width: 150px; /* Điều chỉnh kích thước của logo */
        height: auto; /* Đảm bảo tỷ lệ giữ nguyên khi thay đổi kích thước */
    }

        /* Hiệu ứng hover cho logo */
        .logo-img:hover {
            transform: scale(1.1); /* Phóng to logo khi hover */
            transition: all 0.3s ease;
        }
</style>
