@model Thietbi.Models.TbLichSuSuaChua

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 115px
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 100%;
                margin-right: 10px;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            text-align: center;
            color: #553f3a;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }

        .btn-back {
            color: black;
        }

            .btn-back:hover {
                font-weight: bold; /* Chữ sẽ đậm hơn khi hover */
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Thêm hiệu ứng bóng đổ khi hover */
                transform: scale(1.05); /* Tạo hiệu ứng phóng to nhẹ khi hover */
            }

            /* Khi nhấn nút */
            .btn-back:active {
                font-weight: bolder; /* Chữ sẽ đậm hơn khi nhấn */
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5); /* Thay đổi bóng đổ khi nhấn */
            }

        .btn i {
            margin-right: 5px;
        }
        .form-control { /*chỉnh sửa cho ô nhập dữ liệu*/
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
        background-color: rgba(255,255,255,0.5);
    }

        .form-control:focus {
            border-color: #05c46b; /*màu viền*/
            box-shadow: 0 0 5px rgba(5, 196, 107, 0.6); /* Slight glow */
            outline: none;
        }

    .btn-primary {
        width: 100%; /*độ rộng tối đa*/
        padding: 12px; /*khoảng cách so với viền ngoài*/
        background-color: rgb(95, 111, 101); /*màu nền*/
        border: none;
        color: #fff;
        font-weight: bold;
        border-radius: 5px; /*bo góc cho bảng*/
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transition and button push effect */
    }

        .btn-primary:hover {
            background-color: rgb(105, 132, 116);
            transform: scale(1.05); /* Slightly bigger */
        }

    .btn-back:hover {
        background-color: rgb(105, 132, 116); /*màu nền*/
        transform: scale(1.05); /*phóng to khi di chuột qua*/
    }

        .form-control { /*chỉnh sửa cho ô nhập dữ liệu*/
            width: 100%;
            padding: 10px;
            border: 1px solid #d1d1d1;
            border-radius: 5px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
            background-color: rgba(255,255,255,0.5);
        }

            .form-control:focus {
                border-color: #05c46b; /*màu viền*/
                box-shadow: 0 0 5px rgba(5, 196, 107, 0.6); /* Slight glow */
                outline: none;
            }

        .btn-primary {
            width: 100%; /*độ rộng tối đa*/
            padding: 12px; /*khoảng cách so với viền ngoài*/
            background-color: rgb(95, 111, 101); /*màu nền*/
            border: none;
            color: #fff;
            font-weight: bold;
            border-radius: 5px; /*bo góc cho bảng*/
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transition and button push effect */
        }

            .btn-primary:hover {
                background-color: rgb(105, 132, 116);
                transform: scale(1.05); /* Slightly bigger */
            }

        .btn-back:hover {
            background-color: rgb(105, 132, 116); /*màu nền*/
            transform: scale(1.05); /*phóng to khi di chuột qua*/
        }
        /* Nút đẹp hơn với hiệu ứng hover */
        .btn-primary, .btn-secondary {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            font-size: 18px;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            /* Hiệu ứng hover */
            .btn-primary:hover {
                background-color: #357d9e;
                color: #fff;
                transform: scale(1.05);
            }

            .btn-secondary:hover {
                background-color: #6c757d;
                color: #fff;
                transform: scale(1.05);
            }

        /* Hiệu ứng icon quay */
        .btn i {
            transition: transform 0.5s ease;
        }

        .btn:active i {
            transform: rotate(360deg);
        }


    </style>
</head>

<h1>THÔNG TIN LỊCH SỬ SỬA CHỮA </h1>
<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
<body>
    <div class="form-container">
        <h1 class="text-center">Tạo Lịch Sử Sửa Chữa Thiết Bị</h1>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table colorful-table">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Thông tin</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><label asp-for="IdThietBi" class="control-label"></label></td>
                        <td>
                            <select asp-for="IdThietBi" class="form-control" asp-items="ViewBag.IdThietBi"></select>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="IdNguoiBao" class="control-label"></label></td>
                        <td>
                            <input asp-for="IdNguoiBao" class="form-control" />
                            <span asp-validation-for="IdNguoiBao" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="IdDonViBao" class="control-label"></label></td>
                        <td>
                            <input asp-for="IdDonViBao" class="form-control" />
                            <span asp-validation-for="IdDonViBao" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="IdCanBoSua" class="control-label"></label></td>
                        <td>
                            <input asp-for="IdCanBoSua" class="form-control" />
                            <span asp-validation-for="IdCanBoSua" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="IdDonViSua" class="control-label"></label></td>
                        <td>
                            <input asp-for="IdDonViSua" class="form-control" />
                            <span asp-validation-for="IdDonViSua" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="ThoiGianBatDau" class="control-label"></label></td>
                        <td>
                            <input asp-for="ThoiGianBatDau" class="form-control" />
                            <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="ThoiGianKetThuc" class="control-label"></label></td>
                        <td>
                            <input asp-for="ThoiGianKetThuc" class="form-control" />
                            <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="HienTuong" class="control-label"></label></td>
                        <td>
                            <input asp-for="HienTuong" class="form-control" />
                            <span asp-validation-for="HienTuong" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="NguyenNhanXacDinh" class="control-label"></label></td>
                        <td>
                            <input asp-for="NguyenNhanXacDinh" class="form-control" />
                            <span asp-validation-for="NguyenNhanXacDinh" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="KetQuaSua" class="control-label"></label></td>
                        <td>
                            <input asp-for="KetQuaSua" class="form-control" />
                            <span asp-validation-for="KetQuaSua" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="ThongTinSuaChua" class="control-label"></label></td>
                        <td>
                            <input asp-for="ThongTinSuaChua" class="form-control" />
                            <span asp-validation-for="ThongTinSuaChua" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Tạo lịch sử
                </button>
            </div>
        </form>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay trở về
        </a>
    </div>
</body>
</html>



@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script>
        $(function () {
            $('.datetimepicker').datetimepicker({
                format: ' d/m/Y ', // Định dạng ngày tháng
                timepicker: false // Tắt chọn giờ
            });
        });
    </script>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
