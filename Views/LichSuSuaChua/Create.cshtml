@model Thietbi.Models.TbLichSuSuaChua

@{
    ViewData["Title"] = "Tạo Lịch Sử Sửa Chữa";
}

<h1 class="text-center my-4">Phòng Hậu Cần HVANND</h1>

<hr />
<div class="container mt-5">
    <!-- Thêm hình ảnh Học viện An Ninh vào góc trên bên trái -->
    <div style="position: relative;">
        <img src="/images/Logo_hoc_vien_ANND.png" alt="Logo Học Viện An Ninh" class="logo-img"
             style="position: absolute; top: -180px; left: 10px;" />
    </div>
    <h2 class="text-center mb-4">Tạo Lịch Sử Sửa Chữa</h2>
    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row">
                    <!-- Cột bên trái -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdThietBi" class="form-label"><i class="fas fa-cogs"></i> Thiết Bị</label>
                            <select asp-for="IdThietBi" class="form-select shadow-sm form-select-lg" asp-items="ViewBag.IdThietBi"></select>
                            <span asp-validation-for="IdThietBi" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdNguoiBao" class="form-label"><i class="fas fa-user"></i> Người Báo</label>
                            <input asp-for="IdNguoiBao" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="IdNguoiBao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdDonViBao" class="form-label"><i class="fas fa-building"></i> Đơn Vị Báo</label>
                            <input asp-for="IdDonViBao" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="IdDonViBao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="HienTuong" class="form-label"><i class="fas fa-info-circle"></i> Hiện Tượng</label>
                            <input asp-for="HienTuong" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="HienTuong" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NguyenNhanXacDinh" class="form-label"><i class="fas fa-info-circle"></i> Nguyên Nhân Xác Định</label>
                            <input asp-for="NguyenNhanXacDinh" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="NguyenNhanXacDinh" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Cột bên phải -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdCanBoSua" class="form-label"><i class="fas fa-user-tie"></i> Cán Bộ Sửa</label>
                            <input asp-for="IdCanBoSua" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="IdCanBoSua" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdDonViSua" class="form-label"><i class="fas fa-building"></i> Đơn Vị Sửa</label>
                            <input asp-for="IdDonViSua" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="IdDonViSua" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThoiGianBatDau" class="form-label"><i class="fas fa-calendar-plus"></i> Thời Gian Bắt Đầu</label>
                            <input asp-for="ThoiGianBatDau" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThoiGianKetThuc" class="form-label"><i class="fas fa-calendar-minus"></i> Thời Gian Kết Thúc</label>
                            <input asp-for="ThoiGianKetThuc" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThongTinSuaChua" class="form-label"><i class="fas fa-file-alt"></i> Thông Tin Sửa Chữa</label>
                            <input asp-for="ThongTinSuaChua" class="form-control shadow-sm form-control-lg" />
                            <span asp-validation-for="ThongTinSuaChua" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                             

                <div class="mb-3">
                    <label asp-for="KetQuaSua" class="form-label"><i class="fas fa-check-circle"></i> Kết Quả Sửa</label>
                    <input asp-for="KetQuaSua" class="form-control form-control-lg" />
                    <span asp-validation-for="KetQuaSua" class="text-danger"></span>
                </div>

               

                <div class="form-group text-center">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

<style>
    /* Hiệu ứng hover cho nút */
    .btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các trường nhập liệu */
    .form-control:hover, .form-select:hover {
        border-color: #0056b3;
        background-color: #f0f8ff;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho các biểu tượng */
    i:hover {
        color: #0056b3;
        transform: scale(1.2);
        transition: all 0.3s ease-in-out;
    }

    /* Hiệu ứng hover cho link */
    a:hover {
        color: #0056b3;
        text-decoration: underline;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .card:hover {
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ khi hover */
        transform: translateY(-5px); /* Di chuyển card lên khi hover */
        transition: all 0.3s ease-in-out;
    }

    /* Thêm khoảng cách phía trên nút Tạo Mới */
    .form-group.text-center {
        margin-top: 30px; /* Điều chỉnh giá trị này theo nhu cầu */
    }

    /* Thêm logo vào góc trên bên trái */
    .logo-container {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 999;
    }

    .logo-img {
        width: 100px; /* Điều chỉnh kích thước của logo */
        height: auto; /* Đảm bảo tỷ lệ giữ nguyên khi thay đổi kích thước */
    }

        /* Hiệu ứng hover cho logo */
        .logo-img:hover {
            transform: scale(1.1); /* Phóng to logo khi hover */
            transition: all 0.3s ease;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}