@{
}
@model IEnumerable<Thietbi.Models.TbLichSuSuaChua>

@{
    ViewData["Title"] = "Kết quả tìm kiếm Lịch Sử Sửa Chữa";
}

<h1>Kết quả tìm kiếm</h1>

<p>ID Thiết Bị: @ViewData["IdThietBi"]</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Lịch Sử Sửa Chửa</th>
            <th>Thời Gian Bắt Đầu</th>
            <th>Thời Gian Kết Thúc</th>
            <th>Hiện Tượng</th>
            <th>Nguyên Nhân Xác Định</th>
            <th>Kết Quả Sửa</th>
            <th>Thông Tin Sửa Chữa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdLichSuSuaChua</td>
                <td>@item.ThoiGianBatDau?.ToString("dd/MM/yyyy")</td>
                <td>@item.ThoiGianKetThuc?.ToString("dd/MM/yyyy")</td>
                <td>@item.HienTuong</td>
                <td>@item.NguyenNhanXacDinh</td>
                <td>@item.KetQuaSua</td>
                <td>@item.ThongTinSuaChua</td>
                 </tr>
        }
    </tbody>
</table>

