@model IEnumerable<Thietbi.Models.TbLichSuSuaChua>

@{
    ViewData["Title"] = $"Kết quả tìm kiếm Lịch Sử Sửa Chữa - ID Thiết Bị: {ViewData["IdThietBi"]}";
}

<div class="container mt-4">
    <!-- Card bao toàn bộ -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0 fw-bold">Kết Quả Tìm Kiếm - Lịch Sử Sửa Chữa</h2>
        </div>
        <div class="card-body">
            <p class="fw-bold">ID Thiết Bị: <span class="text-primary">@ViewData["IdThietBi"]</span></p>


            @if (!Model.Any())
            {
                <p class="text-danger text-center fw-bold">Không có lịch sử sửa chữa nào cho thiết bị này.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table id="repairTable" class="table table-bordered table-striped align-middle">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th>ID Lịch Sử Sửa Chữa</th>
                                <th>Thời Gian Bắt Đầu</th>
                                <th>Thời Gian Kết Thúc</th>
                                <th>Hiện Tượng</th>
                                <th>Nguyên Nhân Xác Định</th>
                                <th>Kết Quả Sửa</th>
                                <th>Thông Tin Sửa Chữa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.IdLichSuSuaChua</td>
                                    <td>@item.ThoiGianBatDau?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.ThoiGianKetThuc?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.HienTuong</td>
                                    <td>@item.NguyenNhanXacDinh</td>
                                    <td>@item.KetQuaSua</td>
                                    <td>@item.ThongTinSuaChua</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Nút Quay lại -->
                <div class="text-center mb-4">
                    <a href="/ThietBi/TraCuu" class="btn btn-outline-primary fw-bold px-4 py-2 shadow">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background-color: #f7f9fc; /* Nền dịu nhẹ */
    }

    .card {
        border-radius: 15px; /* Bo góc */
        overflow: hidden;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        text-transform: uppercase;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        border-radius: 30px; /* Bo tròn nút */
        transition: all 0.3s ease; /* Hiệu ứng mượt khi hover */
    }

        .btn:hover {
            background-color: #0d6efd; /* Màu xanh khi hover */
            color: #fff; /* Chữ trắng khi hover */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Hiệu ứng đổ bóng */
        }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

        .table thead th {
            background-color: #f8f9fa; /* Nền sáng */
            text-transform: uppercase;
            font-weight: bold;
            font-size: 0.85rem;
        }

        .table tbody tr:hover {
            background-color: #eef3f7; /* Hiệu ứng hover */
        }

    .text-danger {
        font-size: 1rem;
        font-weight: bold;
    }

    .table tbody td {
        vertical-align: middle;
    }

    .text-center {
        text-align: center;
    }
</style>
