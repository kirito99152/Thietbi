@model Thietbi.Models.TbLichSuSuaChua

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #fff9e9;
            color: #553f3a;
            font-family: "IBM Plex Serif", serif;
            font-weight: 500;
            font-style: normal;
            margin-bottom: 115px
        }

        .container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 100%;
            margin: auto;
            background-color: #ccdee2;
        }

        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #553f3a;
                width: 85%;
                margin-right: 10px;
            }

        label {
            font-size: 16px;
            color: #553f3a;
        }

        h1 {
            text-align: center;
            color: #553f3a;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4b9ab4;
            border: none;
            border-radius: 5px;
            color: #FFFFFF;
            font-size: 18px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #A1D8EC;
            }
    </style>
</head>

<h1>Chỉnh Sửa Thông Tin</h1>
<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}


<h1>Thông Tin Đã Nhập</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLichSuSuaChua" />
            <div class="form-group">
                <label asp-for="IdThietBi" class="control-label"></label>
                <select asp-for="IdThietBi" class="form-control" asp-items="ViewBag.IdThietBi"></select>
                <span asp-validation-for="IdThietBi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNguoiBao" class="control-label"></label>
                <input asp-for="IdNguoiBao" class="form-control" />
                <span asp-validation-for="IdNguoiBao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDonViBao" class="control-label"></label>
                <input asp-for="IdDonViBao" class="form-control" />
                <span asp-validation-for="IdDonViBao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCanBoSua" class="control-label"></label>
                <input asp-for="IdCanBoSua" class="form-control" />
                <span asp-validation-for="IdCanBoSua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDonViSua" class="control-label"></label>
                <input asp-for="IdDonViSua" class="form-control" />
                <span asp-validation-for="IdDonViSua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianBatDau" class="control-label"></label>
                <input asp-for="ThoiGianBatDau" class="form-control" />
                <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianKetThuc" class="control-label"></label>
                <input asp-for="ThoiGianKetThuc" class="form-control" />
                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HienTuong" class="control-label"></label>
                <input asp-for="HienTuong" class="form-control" />
                <span asp-validation-for="HienTuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguyenNhanXacDinh" class="control-label"></label>
                <input asp-for="NguyenNhanXacDinh" class="form-control" />
                <span asp-validation-for="NguyenNhanXacDinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KetQuaSua" class="control-label"></label>
                <input asp-for="KetQuaSua" class="form-control" />
                <span asp-validation-for="KetQuaSua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThongTinSuaChua" class="control-label"></label>
                <input asp-for="ThongTinSuaChua" class="form-control" />
                <span asp-validation-for="ThongTinSuaChua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CachSua" class="control-label"></label>
                <input asp-for="CachSua" class="form-control" />
                <span asp-validation-for="CachSua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index" class="btn-back">
            <i class="fa-solid fa-circle-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
