@model Thietbi.Models.TbLichSuSuaChua

@{
    ViewData["Title"] = "Sửa Thông Tin";
}

<h2 class="text-center mb-4 fw-bold">Chỉnh Sửa Thông Tin</h2>

<div class="container">
    <div class="card shadow-lg rounded-lg p-4">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="IdLichSuSuaChua" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdThietBi" class="form-label fw-bold"><i class="fas fa-tools"></i> Thiết Bị</label>
                        <select asp-for="IdThietBi" class="form-select shadow-sm form-select-lg" asp-items="ViewBag.IdThietBi"></select>
                        <span asp-validation-for="IdThietBi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdNguoiBao" class="form-label fw-bold"><i class="fas fa-user"></i> Người Báo</label>
                        <input asp-for="IdNguoiBao" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdNguoiBao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdDonViBao" class="form-label fw-bold"><i class="fas fa-building"></i> Đơn Vị Báo</label>
                        <input asp-for="IdDonViBao" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdDonViBao" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdCanBoSua" class="form-label fw-bold"><i class="fas fa-user-cog"></i> Cán Bộ Sửa</label>
                        <input asp-for="IdCanBoSua" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdCanBoSua" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdDonViSua" class="form-label fw-bold"><i class="fas fa-industry"></i> Đơn Vị Sửa</label>
                        <input asp-for="IdDonViSua" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="IdDonViSua" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ThoiGianBatDau" class="form-label fw-bold"><i class="fas fa-calendar-alt"></i> Thời Gian Bắt Đầu</label>
                        <input asp-for="ThoiGianBatDau" type="datetime-local" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ThoiGianKetThuc" class="form-label fw-bold"><i class="fas fa-calendar-check"></i> Thời Gian Kết Thúc</label>
                        <input asp-for="ThoiGianKetThuc" type="datetime-local" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HienTuong" class="form-label fw-bold"><i class="fas fa-exclamation-circle"></i> Hiện Tượng</label>
                        <input asp-for="HienTuong" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="HienTuong" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NguyenNhanXacDinh" class="form-label fw-bold"><i class="fas fa-search"></i> Nguyên Nhân Xác Định</label>
                        <input asp-for="NguyenNhanXacDinh" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="NguyenNhanXacDinh" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="KetQuaSua" class="form-label fw-bold"><i class="fas fa-check-circle"></i> Kết Quả Sửa</label>
                        <input asp-for="KetQuaSua" class="form-control shadow-sm form-control-lg" />
                        <span asp-validation-for="KetQuaSua" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ThongTinSuaChua" class="form-label fw-bold"><i class="fas fa-info-circle"></i> Thông Tin Sửa Chữa</label>
                        <textarea asp-for="ThongTinSuaChua" class="form-control shadow-sm form-control-lg" rows="3"></textarea>
                        <span asp-validation-for="ThongTinSuaChua" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CachSua" class="form-label fw-bold"><i class="fas fa-tools"></i> Cách Sửa</label>
                        <textarea asp-for="CachSua" class="form-control shadow-sm form-control-lg" rows="3"></textarea>
                        <span asp-validation-for="CachSua" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-2">Lưu Thông Tin</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    .form-control:hover, .form-select:hover {
        border-color: #0056b3;
        background-color: #f0f8ff;
        transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
    }

    i:hover {
        color: #0056b3;
        transform: scale(1.2);
        transition: all 0.3s ease-in-out;
    }

    a:hover {
        color: #0056b3;
        text-decoration: underline;
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .card:hover {
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
